<MDDropdownMenu@BoxLayout>:
    MDList:
        OneLineListItem:
            text: "New"
            on_release:
                app.menu_dropdown.dismiss()
                app.menu_action("New")
        OneLineListItem:
            text: "Edit"
            on_release:
                app.menu_dropdown.dismiss()
                app.menu_action("Edit")
        OneLineListItem:
            text: "Design"
            on_release:
                app.menu_dropdown.dismiss()
                app.menu_action("Design")
        OneLineListItem:
            text: "Completion Sheet"
            on_release:
                app.menu_dropdown.dismiss()
                app.menu_action("Completion")
        OneLineListItem:
            text: "Exit"
            on_release:
                app.menu_dropdown.dismiss()
                app.menu_action("Exit")
